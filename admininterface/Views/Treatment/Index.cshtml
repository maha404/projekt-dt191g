@model IEnumerable<admininterface.Models.TreatmentModel>

@{
    ViewData["Title"] = "Hantera behandlingar";
}

<h1>Hantera behandlingar</h1>
<br>
<form asp-controller="Treatment" asp-action="Index" method="get">
    <p>Sök behandling efter namn</p>
    <input type="text" name="SearchString">
    <input class="btn btn-primary" type="submit" value="Sök">
</form>

<p>
    <br>
    <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Lägg till behandling</a>
</p>

<div class="table-responsive">
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            @* <th>
                @Html.DisplayNameFor(model => model.Description)
            </th> *@
            <th>
                @Html.DisplayNameFor(model => model.TreatmentTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TreatmentType)
            </th>
            <th>Hantera</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            @* <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td> *@
            <td>
                @Html.DisplayFor(modelItem => item.TreatmentTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TreatmentType.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><i class="fa-solid fa-pen"></i> Ändra</a> 
            
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success"><i class="fa-solid fa-circle-info"></i> Info</a> 
                
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa-solid fa-trash-can"></i> Radera</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>